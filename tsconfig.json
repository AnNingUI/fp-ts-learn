{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"declaration": true,
		"outDir": "dist",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"baseUrl": "./src",
		"paths": {
			"kaia-fs/core/*": ["src/core/*"],
			"kaia-fs/utils/*": ["src/utils/*"],
			"kaia-fs/instances/*": ["src/instances/*"]
		}
	},
	"include": ["src", "tests"]
}
